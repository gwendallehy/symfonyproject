{% extends 'base.html.twig' %}

{% block title %}Liste des sorties{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href={{ asset('css/outing.css') }}>
{% endblock %}
{% block body %}
<div class="outing-form-container">
    <h1>{{ outingForm.vars.value.id ? 'Modifier la sortie' : 'Cr√©er une sortie' }}</h1>

    {{ form_start(outingForm) }}
    {{ form_errors(outingForm) }}
    <div class="form-group d-flex align-items-center">
        {{ form_label(outingForm.place) }}
        {{ form_widget(outingForm.place) }}
        <button
            type="submit"
            name="add_place"
            value="1"
            class="btn btn-secondary ml-2"
            formnovalidate
        >
            Ajouter un lieu
        </button>
    </div>
    {{ form_row(outingForm.name) }}
    {{ form_row(outingForm.dateBegin) }}
    {{ form_row(outingForm.duration) }}
    {{ form_row(outingForm.dateSubscriptionLimit) }}
    {{ form_row(outingForm.nbSubscriptionMax) }}
    {{ form_row(outingForm.description) }}



    {{ form_row(outingForm.site) }}

    <button type="submit" class="btn btn-success mt-3">Enregistrer</button>

    {{ form_end(outingForm) }}
</div>
{% endblock %}
