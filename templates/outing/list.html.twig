{% for outing in outings %}
    <div class="outing">
        <h2>{{ outing.name }}</h2>
        <p>Date : {{ outing.dateBegin|date('d/m/Y H:i') }}</p>
        <p>Organisateur : {{ outing.organizer.pseudo }}</p>
        <p>Site : {{ outing.site.name }}</p>
    </div>
